[core]
    editor = nvim
    pager = less --tabs=1,5 -R
    eol = lf
    autocrlf = input
    fileMode = false
[user]
    name = Alberto Martinez de Murga Ramirez
    email = alberto@threkk.com
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
[push]
    default = current
    autoSetupRemote = true
[commit]
    gpgsign = false
[gpg]
    program = gpg
[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = cyan
    newHighlight = cyan 22
[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red
    new = green
    whitespace = red reverse
[alias]
    all-branches = for-each-ref --sort=-committerdate refs/heads/
    changelog = "!git log --oneline --decorate --abbrev --no-merges  `git tag --sort=-version:refname | head -n 1`..master"
    current-branch = "branch --show-current"
    graph = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    history = "log -p --"
    ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
    ls-changes = "!git status --short | cut -c3-"
    ranking = "git shortlog -s -n --no-merges"
    switch-branch = "!git switch `git branch | fzf`"
    tree = log --all --decorate --oneline --graph
[help]
    autocorrect = 7
[http]
    sslVerify = true
